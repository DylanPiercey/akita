{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "@nrwl/nx", "jest", "prettier", "import", "deprecation"],
  "extends": [
    "airbnb-typescript/base",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "@nrwl/nx/enforce-module-boundaries": [
      "error",
      {
        "allow": [],
        "depConstraints": [{ "onlyDependOnLibsWithTags": ["*"], "sourceTag": "*" }],
        "enforceBuildableLibDependency": true
      }
    ],
    "@typescript-eslint/ban-types": [
      "error",
      {
        // "types": { "Function": { "message": "Prefer a specific function type, like `() => void`." } } TODO enable, also keep eye on https://github.com/typescript-eslint/typescript-eslint/pull/848
      }
    ],
    "@typescript-eslint/no-explicit-any": "off", // TODO enable
    "@typescript-eslint/prefer-readonly": "warn",
    "complexity": "error",
    "import/no-extraneous-dependencies": ["error", { "packageDir": "." }],
    "import/prefer-default-export": "off",
    "no-implicit-globals": "error",
    "no-implied-eval": "error",
    "deprecation/deprecation": "off", // TODO find alternative, see https://github.com/gund/eslint-plugin-deprecation/issues/2
    "no-underscore-dangle": "off", // underscore is used rampantly through out the code
    "no-console": ["error", { "allow": ["warn", "error", "trace", "group", "groupEnd"] }],
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["*.tsx"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
